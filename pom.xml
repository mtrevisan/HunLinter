		<maven-assembly-plugin.version>3.7.1</maven-assembly-plugin.version>
		<!-- https://mvnrepository.com/artifact/org.codehaus.mojo/exec-maven-plugin -->
		<exec-maven-plugin.version>3.4.1</exec-maven-plugin.version>
		<!-- https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-install-plugin -->
		<maven-install-plugin.version>3.1.3</maven-install-plugin.version>

		<!-- Apache -->
		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-text -->
		<apache.commons-text.version>1.12.0</apache.commons-text.version>
		<!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
		<apache.commons-io.version>2.16.1</apache.commons-io.version>

		<!-- jFreeChart -->
		<!-- https://mvnrepository.com/artifact/org.jfree/jfreechart -->
		<jfree.jfreechart.version>1.5.5</jfree.jfreechart.version>

		<!-- https://mvnrepository.com/artifact/com.github.vsonnier/hppcrt -->
		<github.vsonnier.hppcrt.version>0.7.5</github.vsonnier.hppcrt.version>

		<!-- JSON -->
